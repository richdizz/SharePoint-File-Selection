
@{
    ViewBag.Title = "ForSite";
}
@model IEnumerable<FileProviderSample.Models.SiteModel>
<h2>Site Collections:</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Site</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/files/site?site=@item.Path">
                                <h3>@item.Name</h3>
                                <h5>@item.Path</h5>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>