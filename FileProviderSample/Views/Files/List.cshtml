
@{
    ViewBag.Title = "Site";
}
@model IEnumerable<FileProviderSample.Models.ItemModel>
<h2>@ViewData["Listname"]:</h2>
<h4><a href="javascript:window.history.back();">&lt; Back</a></h4>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.ItemType == FileProviderSample.Models.ItemType.Folder)
                            {
                                <a href="/files/list?site=@ViewData["Site"]&list=@ViewData["List"]&listname=@ViewData["Listname"]&folder=@item.Url">
                                    <h5>@item.Title</h5>
                                </a>
                            }
                            else
                            {
                                <h5>@item.Title</h5>
                            }
                        </td>
                        <td>@item.ItemType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>